# EvoWorld Environment Configuration
# Copy this file to .env and modify as needed

# Database Configuration
# You can override the database URL with an environment variable
DATABASE_URL=postgresql://evoworld:evoworld_password@localhost:5432/evoworld

# Alternative configurations for different environments:
# Development: DATABASE_URL=postgresql://evoworld:evoworld_password@localhost:5432/evoworld_dev
# Testing: DATABASE_URL=postgresql://evoworld:evoworld_password@localhost:5432/evoworld_test
# Production: DATABASE_URL=postgresql://user:password@production-host:5432/evoworld_prod

# Simulation Configuration
SIMULATION_SPEED=1.0
SIMULATION_TICK_RATE=10.0

# WebSocket Configuration
WEBSOCKET_HOST=127.0.0.1
WEBSOCKET_PORT=8080

# Logging Configuration
RUST_LOG=info 